generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Books {
  book_id Int    @id @default(autoincrement())
  title   String
  author  String
  ISBN    String
  summary String
  url     String
}

model Authors {
  author_id     Int      @id @default(autoincrement())
  first_name    String
  family_name   String
  date_of_birth DateTime
  date_of_death DateTime
  url           String
  lifespan      String
}

model Genres {
  genre_id Int    @id @default(autoincrement())
  name     String
  url      String
}
